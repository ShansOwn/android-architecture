<resources>
  <!-- Root styles that vary by API level -->
  <!-- Disable RTL support on older devices -->
  <!-- Prevents crash on certain devices to namespace conflict -->
  <style name="FrameworkRoot.Theme" parent="Theme.AppCompat.NoActionBar" />

  <!-- Base application theme. -->
  <style name="AppTheme.Base" parent="FrameworkRoot.Theme">
    <item name="colorPrimary">@color/theme_primary</item>
    <item name="colorPrimaryDark">@color/theme_primary_dark</item>
    <item name="colorAccent">@color/theme_accent</item>
  </style>

  <style name="AppTheme" parent="AppTheme.Base" />

  <style name="AppTheme.RootView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="AppTheme.RootView.Vertical">
    <item name="android:orientation">vertical</item>
  </style>

  <style name="AppTheme.RootView.Drawer">
    <item name="android:fitsSystemWindows">true</item>
  </style>

  <style name="AppTheme.MainContent">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="AppTheme.MainContent.Vertical">
    <item name="android:orientation">vertical</item>
  </style>
</resources>